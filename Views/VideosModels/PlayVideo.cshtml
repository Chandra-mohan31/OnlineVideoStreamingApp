@model OnlineVideoStreamingApp.Models.VideosModel


@{
    ViewData["Title"] = "Video Player";
    var comments =(List<OnlineVideoStreamingApp.Models.CommentsInfoModel>)ViewData["COMMENTS"];
}

<h3>@Model.VideoTitle</h3>

<div class="video_player_container">
    <video class="video_player" controls>
        <source src="@Model.VideoUrl" type="video/mp4">
    </video>
</div>


<div class="card video_info_container mb-3 mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.VideoTitle</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.VideoCategory</h6>
        <p class="card-text">@Model.VideoDescription</p>
        <div class="d-flex align-items-center justify-content-start p-2">
            <img src="@Model.PostedByUser.ProfileImageUrl" class="rounded-avatar mr-3 me-3" alt="posteduserimage" />
            <p class="card-text">@Model.PostedByUser.UserName</p>
          
        </div>
        <p>
            @{
                TimeSpan timeSincePosted = (DateTime)DateTime.Now - (DateTime)Model.VideoPostedOn;
                if (timeSincePosted.TotalDays >= 1)
                {
                    @($"{Math.Floor(timeSincePosted.TotalDays)} days ago")
                }
                else
                {
                    @($"{timeSincePosted.Hours} hours, {timeSincePosted.Minutes} minutes ago")
                }
            }
        </p>
        <form asp-action="LikePost">
            <input type="text" value="@Model.Id" name="video_id" hidden />
            <div class="d-flex flex-row align-items-center">
                <button type="submit" class="border-0">
                    <i class="fas fa-thumbs-up"></i>
                </button>
                <span>@ViewData["LIKES_COUNT"] &nbsp;&nbsp;&nbsp;  Views : @ViewData["VIEWS_COUNT"] </span>

            </div>

        </form>
    </div>
</div>

<div class="main_comments_container">
 
    @if(comments != null){
    <div class="comments_container">
     
            @foreach(var item in comments)
            {
                <div class="comment">
                        <img src="@item.CommentedUser.ProfileImageUrl" alt="profile_image" class="rounded-avatar" />
                        <div class="comment_content">
                        <p class="comment_header">Commented By : @item.CommentedUser.UserName</p>
                        <p class="comment_body">Comment : @item.Comment</p>
                        <p class="comment_body">Commented On : @item.CommentedOn</p>



                        @if (ViewData["currUserId"] != null && @item.CommentedUser.Id == ViewData["currUserId"].ToString())
                        {
                            <form asp-action="UnComment">
                                <input type="text" value="@item.Id" name="commentId" hidden />
                                <input type="text" value="@Model.Id" name="videoId" hidden />

                                <button class="btn btn-danger" type="submit">X</button>
                            </form>
                        }
                    </div>
                    </div>

            }
    </div>
    }
    <form asp-action="CommentOnPost" class="d-flex align-items-center justify-content-between">
        <input type="text" value="@Model.Id" name="video_id" hidden />
        <input type="text" name="comment" class="comment_input_box" />

        <button type="submit" class="btn btn-secondary text-white">Comment</button>
    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary m-10">Back to Subscribed Videos</a>
</div>

<style>
    .video_player_container {
        width: 100%;
        height: 0;
        padding-bottom: 56.25%; 
        position: relative;
    }

    .video_player {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .comments_container {
        margin-top: 20px;
        margin-bottom: 20px;
        padding: 20px;
        border: 1px solid #ccc;
    }

    .comment {
        display: flex;
        margin-bottom: 20px;
    }

        .comment img {
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }

    .comment_content {
        flex: 1;
    }

    .comment_header {
        margin: 0;
        font-size: 14px;
        font-weight: bold;
        line-height: 1.4;
    }

    .comment_date {
        font-weight: normal;
        font-size: 12px;
        color: #888;
        margin-left: 10px;
    }

    .comment_body {
        margin: 10px 0;
        font-size: 14px;
        line-height: 1.4;
    }

    .comment_input_box {
        width: 90%;
        padding: 5px;
        border: 2px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        font-family: Arial, sans-serif;
        margin: 5px;
    }

</style>