@model OnlineVideoStreamingApp.Models.VideosModel

@{
    ViewData["Title"] = "Create";
}

<h4>Upload a new Video</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     @*       <div class="form-group">
                <label asp-for="ThumbNailImage" class="control-label"></label>
                <input asp-for="ThumbNailImage" class="form-control" />
                <span asp-validation-for="ThumbNailImage" class="text-danger"></span>
            </div>*@
