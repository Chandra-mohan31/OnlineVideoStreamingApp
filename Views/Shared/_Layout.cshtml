@using OnlineVideoStreamingApp.Controllers;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineVideoStreamingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineVideoStreamingApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-gradient border-bottom box-shadow mb-3">
            <div class="container-fluid">
                   
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                                <a class="navbar-brand navbarElement" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-newspaper"></i>

                                    Subscriptions</a>

                        </li>
                     <li class="nav-item">
                            <a class="navbar-brand navbarElement" asp-area="" asp-controller="Home" asp-action="Search">
                                <i class="fas fa-search"></i>

                                Explore</a>

                     </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


<style>
    .navbar {
        background: linear-gradient(to bottom, #ffffff, #f2f2f2);
    }

    .footer{
        margin-top: 20px;
    }
    .navbar-brand,
    .navbar-nav a {
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        color: #333;
    }

    .navbar-nav a {
        padding: 0.3rem 0.8rem;

    }

        .navbar-nav a:hover {
            background-color: #eee;
            color: #555;
        }

 




</style>
</html>
